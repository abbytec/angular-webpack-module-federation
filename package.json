{
	"name": "angular-mfe",
	"version": "1.0.0",
	"private": true,
	"description": "Monorepo for Angular Microfrontend Architecture with pnpm",
	"workspaces": [
		"host",
		"about-us",
		"homepage"
	],
	"scripts": {
		"start:about-us": "pnpm --filter about-us run start",
		"start:homepage": "pnpm --filter homepage run start",
		"start:host": "pnpm --filter host run start",
		"start:all": "pnpm run start:about-us & pnpm run start:homepage & pnpm run start:host"
	},
	"devDependencies": {
		"@types/node": "^22.10.2",
		"@types/webpack-env": "^1.18.5",
		"css-loader": "^7.1.2",
		"html-loader": "^5.1.0",
		"html-webpack-plugin": "^5.6.3",
		"raw-loader": "^4.0.2",
		"style-loader": "^4.0.0",
		"to-string-loader": "^1.2.0",
		"ts-loader": "^9.5.1",
		"typescript": "^4.9.5",
		"webpack": "^5.0.0",
		"webpack-cli": "^5.0.0",
		"webpack-dev-server": "^4.0.0"
	},
	"dependencies": {
		"@angular/animations": "^16.2.12",
		"@angular/cdk": "^16.2.12",
		"@angular/common": "^16.2.12",
		"@angular/core": "^16.2.12",
		"@angular/material": "^16.2.12",
		"@angular/platform-browser": "^16.2.12",
		"@angular/platform-browser-dynamic": "^16.2.12",
		"@angular/router": "^16.2.12"
	},
	"engines": {
		"node": ">=16",
		"pnpm": ">=8"
	}
}
